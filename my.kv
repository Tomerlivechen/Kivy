<MyGrid>

    fname:fnametext
    sname:snametext    
    email:emailtext
    
    GridLayout:
        cols:1
#window size
        size: root.width*0.8, root.height*0.8
# adding padding
        pos: root.width*0.1, root.height*0.1
        
        GridLayout:
            cols:2
        
            Label:
                text:"Name: "
            TextInput:
                id:fnametext
                mutiline:False


            Label:
                text:"Sir Name: "        
            TextInput:
                id:snametext
                mutiline:False
                 
            Label:
                text:"E-mail: "        
            TextInput:
                id:emailtext
                mutiline:False

        Button:
            text:"Submit"
            on_press:root.submit()